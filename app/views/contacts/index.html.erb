<% if notice.present? %>
  <div class="alert alert-success" role="alert" id="notice">
    <%= notice %>
  </div>
<% end %>

<div class="d-flex align-items-center justify-content-between">
  <h2 class="mb-3">My Contacts</h2>
  <div>
    <%= link_to new_contact_path do %>
      <i class="fas fa-user-plus fa-2x mr-3 text-dark"></i>
    <% end %>
    <%= link_to new_contact_path do %>
      <i class="fas fa-history fa-2x mr-3" style="color:black"></i>
    <% end %>
  </div>
</div>

<table class="table">
  <thead style="background-color: #e3f2fd;">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td>
          <%= link_to contact do %>
            <i class="fas fa-eye mr-1 text-dark"></i>
          <% end %>
          <%= link_to edit_contact_path(contact) do %>
            <i class="fas fa-edit mr-1 text-dark"></i>
          <% end %>
          <%= link_to contact, method: :delete, data: { confirm: 'Are you sure you want to delete this contact?' } do %>
            <i class="fas fa-trash text-dark"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>