<div class="d-flex align-items-center justify-content-between">
    <h2 class="mb-3">My History</h2>
    <div>
        <%= link_to contacts_path do %>
            <i class="fas fa-arrow-circle-left fa-2x text-dark"></i>
        <% end %>
    </div>
</div>

<table class="table">
    <thead style="background-color: #e3f2fd;">
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th class="text-center">Phone number</th>
            <th class="text-center">Action performed</th>
            <th class="text-center">Modification date</th>
        </tr>
    </thead>

    <tbody>
        <% @registrations.each do |history| %>
        <tr>
            <td><%= history.first_name %></td>
            <td><%= history.last_name %></td>
            <td><%= history.email %></td>
            <td class="text-center"><%= history.phone %></td>
            <td class="text-center"><%= history.action %></td>
            <td class="text-center"><%= history.created_at.strftime('%F') %></td>
        </tr>
        <% end %>
    </tbody>
</table>